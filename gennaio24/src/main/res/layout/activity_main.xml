<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Display binario -->
    <GridLayout
        android:id="@+id/displayBinario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:columnCount="8"
        android:rowCount="1"
        android:orientation="horizontal">

        <!-- Celle per il display binario -->
        <TextView
            android:id="@+id/bit0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>
        <TextView
            android:id="@+id/bit7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:onClick="onBitClicked"/>

    </GridLayout>

    <!-- Display decimale -->
    <TextView
        android:id="@+id/displayDecimale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayBinario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#673AB7"
        android:text="00"
        android:textSize="50dp"/>

    <!-- Selettore modalitÃ  -->

    <RadioGroup
        android:id="@+id/selettoreModalita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayDecimale"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/modalitaSinistra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/modalitaDestra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"/>

    </RadioGroup>

    <!-- Pulsanti per le operazioni -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selettoreModalita"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonShuffleCoppie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onModalitaShiftClicked"
            android:background="#673AB7"
            android:text="S2" />

        <Button
            android:id="@+id/buttonShuffleQuattro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onModalitaShiftClicked"
            android:background="#673AB7"
            android:text="S4" />
    </LinearLayout>

</RelativeLayout>
