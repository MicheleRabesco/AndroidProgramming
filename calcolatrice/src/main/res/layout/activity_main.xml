<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fffaaa"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/operationDisplay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:background="#456789"
                android:gravity="right"
                android:hint="1+1"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/resultDisplay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#456789"
                android:gravity="right"
                android:hint="2"
                android:text=""
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fffaaa"
                    android:text="Memory:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/memoryDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffaaa"
                    android:gravity="right"
                    android:hint="memory output"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="1">


                    <Button
                        android:id="@+id/clear"
                        android:layout_width="20sp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:text="C"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/memoryClear"
                        android:layout_width="20sp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:text="MC"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/memorySave"
                        android:layout_width="20sp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:text="MS"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/memoryRecall"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:text="MR"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/subtract"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:text="-" />


                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="5">


                    <Button
                        android:id="@+id/n7"
                        android:layout_width="20sp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:text="7" />

                    <Button
                        android:id="@+id/n8"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="8" />

                    <Button
                        android:id="@+id/n9"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="9" />

                    <Button
                        android:id="@+id/divide"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="/" />

                    <Button
                        android:id="@+id/n4"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:text="4" />

                    <Button
                        android:id="@+id/n5"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:text="5" />

                    <Button
                        android:id="@+id/n6"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="6" />

                    <Button
                        android:id="@+id/multi"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="*" />

                    <Button
                        android:id="@+id/n1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:text="1" />

                    <Button
                        android:id="@+id/n2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="2" />

                    <Button
                        android:id="@+id/n3"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="3" />

                    <Button
                        android:id="@+id/sum"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="+" />


                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="1">


                    <Button
                        android:id="@+id/n0"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:text="0" />

                    <Button
                        android:id="@+id/point"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="." />

                    <Button
                        android:id="@+id/result"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="10sp"
                        android:clickable="true"
                        android:text="=" />


                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>